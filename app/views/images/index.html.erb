    <% if current_user?(image.user) %>
    <%= link_to "edit", image, method: :edit,
                                     data: { confirm: "You sure?" },
                                     title: image.content %>
    <% end %>
    
    <%# link_to 'Edit', edit_image_path(image)%>
    
