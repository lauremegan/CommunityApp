<% @images.each do |image| %>
  <div class="image">
  <%= image_tag image.upload_url(:thumb)   %><br />
    <%= image.title %><br />
    <%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %>
</div>
<% end %>



